      function hacerSonido(texto){
        responsiveVoice.speak(texto,"Spanish Latin American Female");
      }
      var selectvaca = document.getElementById("vaca");
      var opcionvaca = selectvaca.options[selectvaca.selectedIndex].value;
			function alertopcionselec(){
				var selectvaca = document.getElementById("vaca");
      	var opcionvaca = selectvaca.options[selectvaca.selectedIndex].value;
				alert(opcionvaca);
			}
			function verificarejercicio(){
				var selectvaca = document.getElementById("vaca");
      	var opcionvaca = selectvaca.options[selectvaca.selectedIndex].value;
				var selectchancho = document.getElementById("chancho");
      	var opcionchancho = selectchancho.options[selectchancho.selectedIndex].value;
				var selectoveja = document.getElementById("oveja");
      	var opcionoveja = selectoveja.options[selectoveja.selectedIndex].value;
				var selectgallo = document.getElementById("gallo");
      	var opciongallo = selectgallo.options[selectgallo.selectedIndex].value;
				var correctas = 0;
				var incorrectas = 4;
				if(opcionvaca==1){
					correctas = correctas+1;
					incorrectas = incorrectas-1;
					document.getElementById("vacacorrecta").style.visibility = "visible";
					document.getElementById("vacaincorrecta").style.visibility = "hidden";
				}else{
					document.getElementById("vacaincorrecta").style.visibility = "visible";
					document.getElementById("vacacorrecta").style.visibility = "hidden";
				}
				if(opcionchancho==2){
					correctas = correctas+1;
					incorrectas = incorrectas-1;				
					document.getElementById("chanchocorrecta").style.visibility = "visible";
				}else{document.getElementById("chanchoincorrecta").style.visibility = "visible";}
				if(opcionoveja==3){
					correctas = correctas+1;
					incorrectas = incorrectas-1;
					document.getElementById("ovejacorrecta").style.visibility = "visible";
				}else{document.getElementById("ovejaincorrecta").style.visibility = "visible";}
				if(opciongallo==4){
					correctas = correctas+1;
					incorrectas = incorrectas-1;
					document.getElementById("gallocorrecta").style.visibility = "visible";
				}else{document.getElementById("galloincorrecta").style.visibility = "visible";}
				document.getElementById('correctas').innerHTML= correctas;
				document.getElementById('incorrectas').innerHTML= incorrectas;
				document.getElementById("textoresultados").style.visibility = "visible";
			}
    </script>
